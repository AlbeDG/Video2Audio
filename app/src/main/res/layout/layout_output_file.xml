<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outputFileLayout"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleTextView"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/outputFileImageView"
            android:layout_marginEnd="5dp"
            android:layout_width="56dp"
            android:layout_height="26dp"
            app:srcCompat="@drawable/ellipsis_v_icon"
            android:layout_weight="1"
            android:visibility="visible"
            app:tint="@color/light_blue" />

        <CheckBox
            android:id="@+id/checkBox"
            style="@style/LightBlueCheck"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:buttonTint="@color/light_blue"
            android:checked="false"
            android:clickable="false"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration 00:00" />

        <TextView
            android:id="@+id/sizeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="0kb" />

        <TextView
            android:id="@+id/bitrateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Bitrate: "

            />

        <TextView
            android:id="@+id/encodingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Encoding: CBR"

            />
    </LinearLayout>
</LinearLayout>